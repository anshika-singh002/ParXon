<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center"
    android:background="@drawable/finalimageloginbg">  <!-- ðŸ”¹ Matches login screen background -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="
        Water Intake Calculator"
        android:textSize="36dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/colorDarkestgreen"
        android:layout_marginBottom="20dp"/>

    <EditText
        android:id="@+id/weightInput"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Enter weight (kg) âš–ï¸"
        android:background="@drawable/custom_edittext"
        android:drawableLeft="@drawable/baseline_person_24"
        android:drawablePadding="8dp"
        android:padding="10dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textColorHighlight="@color/colorLightButton"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Activity Level: ðŸƒâ€â™‚ï¸"
        android:textSize="18sp"
        android:textColor="@color/colorDarkestgreen"
        android:layout_marginTop="10dp"/>

    <RadioGroup
        android:id="@+id/activityLevelGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/lowActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸš¶â€â™‚ï¸ Low Activity (Sedentary)"
            android:textColor="@color/colorDarkestgreen"/>  <!-- âœ… Color Matched -->

        <RadioButton
            android:id="@+id/moderateActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ‹ï¸â€â™‚ï¸ Moderate Activity (Daily Walks)"
            android:textColor="@color/colorDarkestgreen"/>  <!-- âœ… Color Matched -->

        <RadioButton
            android:id="@+id/highActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸƒâ€â™‚ï¸ High Activity (Exercise 3+ Days/Week)"
            android:textColor="@color/colorDarkestgreen"/>  <!-- âœ… Color Matched -->
    </RadioGroup>

    <Button
        android:id="@+id/calculateButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Calculate Water Intake"
        android:textSize="18sp"
        android:backgroundTint="@color/colorButton"
        android:textColor="@android:color/white"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/resultText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your daily water intake will appear here"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textColor="@color/colorDarkestgreen"
        android:layout_marginTop="20dp"/>
</LinearLayout>
